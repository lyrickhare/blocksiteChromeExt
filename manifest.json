{
  "manifest_version": 3,
  "name": "Procrastination Blocker",
  "version": "0.1.1",
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["Content.js"]
    }
  ],
  "icons": { "48": "icon48.png", "128": "icon128.png" },

  "host_permissions": [
    "https://www.reddit.com/*",
    "https://www.facebook.com/*",
    "https://www.instagram.com/*"
  ],
  "permissions": [
    "storage"
  ]
}
